name: CI/CD Pipeline

on:
  push:
    branches:
      - main
  pull_request:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repo
      - name: Checkout code
        uses: actions/checkout@v3

      # Setup Node.js (change to java/python if needed)
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      # Install dependencies
      - name: Install dependencies
        run: npm install

      # Run tests
      - name: Run tests
        run: npm test

      # Build project
      - name: Build project
        run: npm run build

      # Deploy (example: GitHub Pages / server / Docker / AWS)
      - name: Deploy
        if: github.ref == 'refs/heads/main'
        run: |
          echo "ðŸš€ Deploying application..."
          # add your deploy command here (e.g., scp, docker push, server script)
